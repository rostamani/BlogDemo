@page
@model BlogDemo.Pages.CreateArticleModel
@{
    ViewData["Title"] = "ارسال مقاله جدید";
}

<form class="mr-auto ml-auto">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="title">عنوان مقاله</label>
            <input class="form-control" id="title" name="title">
        </div>
        <div class="form-group col-md-6">
            <label for="picture">عکس</label>
            <input class="form-control" id="picture" name="picture">
        </div>
        <div class="form-group col-md-6">
            <label for="picuteAlt">ALT عکس</label>
            <input class="form-control" id="picuteAlt" name="picuteAlt">
        </div>
        <div class="form-group col-md-6">
            <label for="pictureTitle">Title عکس</label>
            <input class="form-control" id="pictureTitle" name="pictureTitle">
        </div>
        <div class="form-group col-md-12">
            <label for="smallDescription">توضیحات کوتاه</label>
            <textarea class="form-control" id="smallDescription" name="smallDescription"></textarea>
        </div>
    </div>
    <div class="form-group">
        <label for="body">متن مقاله</label>
        <textarea rows="5" type="text" class="form-control" id="body"></textarea>
    </div>
    <button type="submit" class="btn btn-success">ارسال</button>
</form>