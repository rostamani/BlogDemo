@page
@model BlogDemo.Pages.CreateArticleModel
@{
    ViewData["Title"] = "ارسال مقاله جدید";
}

<form class="mr-auto ml-auto" method="post" enctype="multipart/form-data">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="CreateArticle.CategoryId">گروه</label>
            <select asp-for="CreateArticle.CategoryId" asp-items="Model.Categories" class="form-control"></select>
            <span asp-validation-for="CreateArticle.Title" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="CreateArticle.Title">عنوان مقاله</label>
            <input class="form-control" id="title" asp-for="CreateArticle.Title">
            <span asp-validation-for="CreateArticle.Title" class="text-danger"></span>
        </div>
        @*<div class="form-group col-md-6">
            <label asp-for="CreateArticle.Picture">عکس</label>
            <input class="form-control" id="picture" asp-for="CreateArticle.Picture">
            <span asp-validation-for="CreateArticle.Picture" class="text-danger"></span>
        </div>*@
        <div class="form-group col-md-6">
            <label asp-for="CreateArticle.Picture"></label>
            <input type="file" name="imageUpload" class="form-control" />
        </div>
        <div class="form-group col-md-6">
            <label for="picuteAlt">ALT عکس</label>
            <input class="form-control" id="picuteAlt" asp-for="CreateArticle.PictureAlt">
            <span asp-validation-for="CreateArticle.PictureAlt" class="text-danger"></span>
        </div>
        <div class="form-group col-md-12">
            <label asp-for="CreateArticle.ShortDescription">توضیحات کوتاه</label>
            <textarea class="form-control" id="smallDescription" asp-for="CreateArticle.ShortDescription"></textarea>
            <span asp-validation-for="CreateArticle.ShortDescription" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="CreateArticle.Body">متن مقاله</label>
        <textarea rows="5" type="text" class="form-control" id="body" asp-for="CreateArticle.Body"></textarea>
        <span asp-validation-for="CreateArticle.Body" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">ارسال</button>
</form>

@section Scripts{
    <partial name="Shared/_ValidationScriptsPartial" />
}
